<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include("partials/adminNavbar") %>
    <div class="container">
      <div class="row">
        <% for(let article of articles){ %>
        <div class="card shadow my-3 px-0">
          <div class="card-header"><%=article.user.firstname%> <%=article.user.lastname%></div>
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.content %></p>
            <% if (user.id === article.user.id) { %>
              <a href="/admin/article/<%= article.id %> " class="btn btn-primary">Editar</a>
              <a href="/admin/delete/<%= article.id %>" class="btn btn-danger">Eliminar</a>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
