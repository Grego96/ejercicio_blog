<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Document</title>
    <style>
      a {
        color: white;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-9">
          <h1>Listado de usuarios</h1>
        </div>
        <div class="col-3 d-flex align-items-center justify-content-end">
          <a type="button" class="btn btn-success" href="/admin/create">Nuevo</a>
        </div>
      </div>
      <div class="row">
        <% for(let article of articles){ %>
        <div class="card shadow my-3 px-0">
          <div class="card-header"><%=article.user.firstname%> <%=article.user.lastname%></div>
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.content %></p>
            <a href="/admin/article/<%= article.id %> " class="btn btn-primary">Editar</a>
            <a href="/admin/delete/<%= article.id %>" class="btn btn-danger">Eliminar</a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
