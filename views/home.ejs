<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div class="container">
      <div class="row">
        <div class="col-12 d-flex justify-content-center">
          <a type="button" class="btn btn-success mt-5" href="/create">Crear Nuevo Articulo</a>
        </div>
        <div class="col-12">
          <div class="card shadow my-5">
            <div class="row g-0">
              <div class="col-md-6 set-height">
                <% if(articles[0].image.includes("http")) {%>
                <img
                  src="<%= articles[0].image%>"
                  class="card-img-top img-fluid img-fixed-size img-main"
                  alt=""
                />
                <% } else{%>
                <img
                  src="/img/<%= articles[0].image%>"
                  class="card-img-top img-fluid img-fixed-size img-main"
                  alt=""
                />
                <% } %>
              </div>
              <div class="col-md-6 d-flex flex-column justify-content-center">
                <div class="card-body d-flex flex-column justify-content-around">
                  <h5 class="card-title"><%=articles[0].title%></h5>
                  <p class="card-text">
                    <%let contenido = articles[0].content%> <%= contenido.substring(0, 500) %>...
                  </p>
                  <div>
                    <a href="/article/<%= articles[0].id %>" class="btn btn-primary w-30"
                      >Leer más</a
                    >
                  </div>
                  <p class="card-text">
                    <small> <%=articles[0].user.firstname%> <%=articles[0].user.lastname%> </small>
                    -
                    <small class="text-muted">
                      <%= format(articles[0].createdAt, `MMMM dd',' yyyy`) %>
                    </small>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% for(let i = 1; i < articles.length; i++){ %>
        <div class="col-4">
          <div class="card mb-3 shadow">
            <% if(articles[i].image.includes("http")) {%>
            <img
              src="<%= articles[i].image %>"
              class="card-img-top img-fluid img-fixed-size"
              alt=""
            />
            <% } else{%>
            <img
              src="/img/<%= articles[i].image %>"
              class="card-img-top img-fluid img-fixed-size"
              alt=""
            />
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%=articles[i].title%></h5>
              <p class="card-text">
                <%=articles[i].user.firstname%> <%=articles[i].user.lastname%> -
                <small class="text-muted">
                  <%= format(articles[i].createdAt, `MMMM dd',' yyyy`) %>
                </small>
              </p>
              <a href="/article/<%= articles[i].id %>" class="btn btn-primary">Leer más</a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
